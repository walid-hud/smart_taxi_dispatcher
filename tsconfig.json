{
  "compilerOptions": {
    "target": "esnext",              
    "module": "nodenext",            
    "rootDir": "./src",                 
    "outDir": "./dist",              
    "strict": true,                  
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true 
  },
  "include": ["src/**/*"],          
  "exclude": ["node_modules"]        
}
